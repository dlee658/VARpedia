            </Button>
            <Button fx:id="backBtn" layoutX="14.0" layoutY="540.0" mnemonicParsing="false" onAction="#handleBackBtnAction" text="Back">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button layoutX="841.0" layoutY="14.0" mnemonicParsing="false" text="?">
               <font>
                  <Font size="24.0" />
               </font>
               <tooltip>
                  <Tooltip text="Edit/Highlight some text to preview/save " />
               </tooltip>
            </Button>
            <Label fx:id="msg" layoutX="169.0" layoutY="540.0">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <VBox fx:id="vb" alignment="CENTER" layoutX="193.0" layoutY="172.0" prefHeight="257.0" prefWidth="514.0" spacing="10.0">
